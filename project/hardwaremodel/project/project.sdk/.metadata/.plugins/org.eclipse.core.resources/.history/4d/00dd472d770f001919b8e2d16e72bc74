#pragma once
#include "AudioSample.h"

#ifndef _DEBUG
#include "hal/AudioDriver.h"
#endif

class AudioInput
{
public:
	AudioInput(void(*output)(AudioSample left, AudioSample right)));
	~AudioInput();

private:
	void (*audio_out)(AudioSample left, AudioSample right); // signal out

	void ReceiveSample();
};

SC_MODULE(AudioInput) {
	SC_CTOR(AudioInput) {
		SC_THREAD(ReceiveSample);
		sensitive << clock;
		std::cout << "CTOR: AudioInput done" << std::endl;
	};

	sc_out<AudioSample> audio_in_right;
    sc_out<AudioSample> audio_in_left;
	sc_in<bool> clock;

	void ReceiveSample(void);
};
