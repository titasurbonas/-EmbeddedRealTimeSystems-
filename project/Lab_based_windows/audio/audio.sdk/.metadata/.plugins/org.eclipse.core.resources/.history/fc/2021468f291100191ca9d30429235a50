#pragma once
#include "Command.h"
#include "hal/AudioDriver.h"

class VolumeCommand : public Command {
public:
	VolumeCommand(AudioDriver* actor, int new_volume):
			Command(),
			actuator(actor),
			volume(new_volume){};
	virtual ~VolumeCommand();
	virtual void play(){actuator->SetVolume((short)volume)}
private:
	int volume;
	AudioDriver * actuator;
};


